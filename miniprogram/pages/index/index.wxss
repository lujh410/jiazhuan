}
.nav01{
  margin-top: 20rpx;
  width: 750rpx;
  height: 180rpx;
  display: flex;
  flex-direction: row;
  text-align: center;
  justify-content: space-around;
}
.nav01>view{
  display: flex;
  flex-direction: column;
}
.nav01 image{
  width: 60rpx;
  height: 60rpx;
  background-color: white;
  border-radius: 10%;
}
.nav01 text{
  margin-top: 10rpx;
  font-size: 25rpx;
}
