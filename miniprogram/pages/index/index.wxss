.page{
  display: flex;
}
.container{
  height: 330rpx;
  width: 750rpx;
  background-color:#EDEDED;
  display: flex;
  flex-direction: row;
  text-align: center;

}
.swiper {

  width: 750rpx;
  height: 300rpx;

}
.swiper-item{
  border-radius:35rpx;
  width: 750rpx;
  height: 300rpx;
}
