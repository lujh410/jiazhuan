  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.nav01 .nav_tuku{
  background-color:orange;
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.nav01 .nav_gongcheng{
  background-color:rgb(238, 8, 238);
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.nav01 .nav_jisuan{
  background-color:orange;
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.guangao image{
  width: 750rpx;
  height: 260rpx;
}

.tab-control {
  display: flex;
  width: 750rpx;
  margin-bottom: 16rpx;
  justify-content: space-around;
}

.tab-item {
  text-align: center;
  width:170rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: rgb(118, 113, 113);
  background-color:rgb(228, 226, 222) ;
  border-radius: 15rpx;
}


.tab-item.active{
  text-align: center;
  width:170rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: white;
  background-color:rgb(62, 143, 209) ;
}
.team_container{
  display: flex;
}
.team_member{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 30rpx;
}
.team_container image{
 width: 200rpx;
 height: 200rpx;
 border-radius: 100%;
}
.team_container text{
  margin-top: 20rpx;
}
.line{
  width: 750rpx;
  height: 20rpx;
  background-color: rgb(228, 226, 222);
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.head{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}
.head>text{
  line-height: 50rpx;
  font-size: 38rpx;
}
.head >view{
  display: flex;
  flex-direction: row;
  justify-content: center;

}
.head >view>image{
  width: 50rpx;
  height: 50rpx;
}
.head >view>text{
  line-height: 50rpx;
  color: #AAAAAA;
  font-size: 28rpx;
}
.library_content{
  width: 750rpx;
}
.news{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 750rpx;
}
.news image{
  width: 170rpx;
  height: 170rpx;
}
.newsitem{
  padding-left: 15rpx;
  display: flex;
  flex-direction: row;
  width: 750rpx;
}
.newsitem .content{
  margin-left: 15rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.newsitem .title{
 font-weight: 800;
 width: 540rpx;
 display: -webkit-box;
 -webkit-line-clamp: 1;
 overflow: hidden;
 text-overflow: ellipsis;
 -webkit-box-orient: vertical;
 word-break: break-all;
}
.newsitem .description{
  margin-top: 10rpx;
  width: 540rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  word-break: break-all;
  color: #AAAAAA;
}
.line_little{
  background-color: rgb(228, 226, 222);
  width: 720rpx;
  height: 2rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}