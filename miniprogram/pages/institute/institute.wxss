/* pages/institute/institute.wxss */
.head{
  margin: 10rpx;
}
.ins_text{
  color: rgb(67, 67, 67);
} 
image{
  width: 140rpx;
  height: 140rpx;
}
.container{
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;  
  flex-wrap:wrap;
  box-sizing: content-box;
}
.content,.detail{
  padding-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;  
  text-align: center;
  flex-wrap:wrap;
  box-sizing: content-box;
  width: 350rpx;
}
.content{
  border: 2rpx solid #e3e3e3;
  margin: 10rpx 0rpx;
}
.detail{
  background-color: MintCream;
}
.institutename{
  font-size: 30rpx;
  padding: 10rpx;
  font-weight: 400;
}
.institutesubtitle{
  font-size: small;
  color: rgb(131, 130, 129);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.instituteNum{
  color: rgb(233, 32, 32);
  padding: 10rpx;
  font-size: 26rpx;
}
.line{
  height: 2rpx;
  width: 100rpx;
}
